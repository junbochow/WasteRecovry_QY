    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间" />

                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/book_time"
                    android:layout_toRightOf="@+id/time1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请选择预约上门时间" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/aimright"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注信息" />
                <EditText
                    android:paddingLeft="20dp"
                    android:layout_toRightOf="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已添加的物品" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_below="@+id/items"
                    android:background="@mipmap/line" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/order_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="点击添加"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确认预约即同意《货郎鼓上门回收免责条款》"
        android:textSize="10dp" />
<Button
    android:id="@+id/submit_order"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:text="确认提交"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/recovery"
            android:layout_gravity="center"/>
        <TextView
            android:paddingBottom="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货郎鼓，您的废品回收专家"
            android:layout_gravity="center"/>
</LinearLayout>

</ScrollView>
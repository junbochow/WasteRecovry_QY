    <android.support.v7.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:paddingLeft="20dp">
        <TextView
            android:paddingTop="7dp"
            android:id="@+id/nearbin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近回收箱"
            android:drawableLeft="@mipmap/nearbin"/>
            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@mipmap/line"/>
        <Button
            android:id="@+id/show_map"
            android:layout_below="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@mipmap/map111"
            />
            <ImageView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@mipmap/line"/>
            <RelativeLayout
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bin_name"
                    android:text="浙江工业大学01号回收箱"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/distance"
                    android:text="约3.06km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/bin_address"
                    android:text="浙江省杭州市西湖区留和路288号计算机楼旁"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bin_name" />
                <RelativeLayout
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bin_address">
                    <TextView
                        android:id="@+id/bin_info"
                        android:text="所有回收箱已满"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/lined"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:paddingRight="15dp"
                        android:id="@+id/bin_time"
                        android:text="00:00~23:59"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/recovery"
        android:layout_gravity="center"/>
    <TextView
        android:paddingBottom="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="货郎鼓，您的废品回收专家"
        android:layout_gravity="center"/>


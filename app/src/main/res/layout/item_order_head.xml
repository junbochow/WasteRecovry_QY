<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:text="订单编号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_ID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
            <TextView
                android:paddingRight="10dp"
                android:id="@+id/order_state"
                android:textColor="#FF0000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right" />

        </LinearLayout>
         <TextView
        android:id="@+id/order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="公司名："
                android:id="@+id/gongsiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_companyname"
                android:layout_toRightOf="@id/gongsiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="下单人："
                android:id="@+id/xiadanren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_custmername"
                android:layout_toRightOf="@id/xiadanren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="联系方式："
                android:id="@+id/lxfs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/order_custmernum"
                android:layout_toRightOf="@+id/lxfs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="回收员："
                android:id="@+id/huishouyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_collectorname"
                android:layout_toRightOf="@id/huishouyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="联系方式："
                android:id="@+id/lianxifangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/order_collectornum"
                android:layout_toRightOf="@+id/lianxifangshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="取货地址："
                android:id="@+id/dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_address"
                android:layout_toRightOf="@id/dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@mipmap/line"/>

</LinearLayout>